{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex flex-col items-center gap-6 justify-center px-4 sm:px-6 lg:px-8 pt-32">
    <form method="post" class="max-w-md w-full space-y-4">
        {% if app.user %}
            <div class="absolute top-4 left-1/2 -translate-x-1/2 py-3 px-5 rounded-lg bg-slate-100 text-slate-950 border
                border-slate-400 flex items-center gap-4">
                <p>
                    You are logged in as {{ app.user.userIdentifier }}
                </p>
                <a 
                    href="{{ path('app_logout') }}" 
                    class="py-1 px-2 bg-rose-900/75 text-slate-50 rounded-md hover:bg-rose-900/90 transition-colors
                    duration-200"
                >
                    Logout
                </a>
            </div>
        {% endif %}

        <div class="flex flex-col items-center gap-2">
            <h1 class="text-3xl text-slate-900">Welcome back !</h1>
            <p class="text-slate-600">Sign in to your account</p>
        </div>
        <div>
            <label for="inputEmail" class="block text-sm font-medium text-slate-600">Email</label>
            <input 
                type="email" 
                value="{{ last_username }}" 
                name="email" 
                id="inputEmail" 
                autocomplete="email" 
                required autofocus
                class="form-control mt-1 block w-full rounded-md border border-slate-300 p-2 focus:ring-slate-500
                sm:text-sm transition-colors duration-200"
            >
        </div>
        <div>
            <label for="inputPassword" class="block text-sm font-medium text-slate-600">Password</label>
            <input 
                type="password" 
                name="password" 
                id="inputPassword" 
                autocomplete="current-password" 
                required
                class="form-control mt-1 block w-full rounded-md border border-slate-300 p-2 focus:ring-slate-500
                sm:text-sm transition-colors duration-200"
            >
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {% if error %}
            <div class="text-rose-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div>
            <label class="cursor-pointer">
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <button 
            class="w-full flex justify-center py-2.5 px-4 rounded-md text-slate-50
                bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 
                focus:ring-slate-500 transition-all duration-200" type="submit"
        >
            Sign in
        </button>
    </form>
    <div class="flex items-center justify-center gap-5 w-full max-w-md">
        <hr class="w-full border-t border-slate-300">
        or
        <hr class="w-full border-t border-slate-300">
    </div>
    <div class="flex justify-center w-full max-w-md">
        <a 
            href="{{ path('app_register') }}" 
            class="w-full flex justify-center py-2.5 px-4 rounded-md text-slate-900
                bg-slate-200 focus:outline-none focus:ring-2 focus:ring-offset-2 
                focus:ring-slate-500 transition-all duration-200"
        >
            Create an account
        </a>
    </div>


</div>
{% endblock %}
