<div id="tab-users" class="tab-content">
    <div>
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead>
                <tr class="bg-gray-50">
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Roles</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Toggle Roles</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for user in users|reverse %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ user.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="h-10 w-10 flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                        <span class="text-gray-600 font-medium">{{ user.firstName|first }}{{ user.lastName|first }}</span>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        {{ user.firstName }} {{ user.lastName }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ user.email }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex flex-wrap gap-2">
                                {% for role in user.roles %}
                                    <span class="rounded-full px-2 py-1 text-xs font-medium text-gray-900 bg-cyan-500/10">
                                        {{ role }}
                                    </span>
                                {% endfor %}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                            <form
                                action="{{ path('app_admin_toggle_admin', {'userId': user.id}) }}"
                                method="POST"
                                class="inline"
                            >
                                <input
                                    type="hidden"
                                    name="_token"
                                    value="{{ csrf_token('toggle_admin_' ~ user.id) }}"
                                >
                                <button
                                        type="submit"
                                        class="inline-flex items-center px-3 py-1.5 border text-xs font-medium
                                        rounded-md shadow-sm {% if 'ROLE_ADMIN' in user.roles %}bg-red-600
                                        text-white hover:bg-red-700 border-red-600{% else %}bg-white
                                        text-gray-700 hover:bg-gray-50 border-gray-300{% endif %}
                                        transition-colors duration-200"
                                >
                                    ADMIN
                                </button>
                            </form>
                            <form
                                action="{{ path('app_admin_toggle_super', {'userId': user.id}) }}"
                                method="POST"
                                class="inline"
                            >
                                <input
                                    type="hidden"
                                    name="_token"
                                    value="{{ csrf_token('toggle_super_' ~ user.id) }}"
                                >
                                <button
                                    type="submit"
                                    class="inline-flex items-center px-3 py-1.5 border text-xs font-medium
                                     rounded-md shadow-sm {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                     bg-purple-600 text-white hover:bg-purple-700 border-purple-600
                                    {% else %}bg-white text-gray-700 hover:bg-gray-50 border-gray-300
                                    {% endif %} transition-colors duration-200"
                                >
                                    SUPER ADMIN
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>