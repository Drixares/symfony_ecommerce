<button
    id="editButton"
    class="text-slate-600 border border-slate-200 px-4 py-2 rounded-lg
    bg-slate-100 hover:bg-slate-200 transition-colors"
>
    Edit Product
</button>

<div id="editProductModal" class="hidden fixed inset-0 bg-black/50 flex justify-center items-center z-50">
    <div class="bg-white p-6 rounded-lg shadow-lg relative w-full max-w-md">
        <!-- Close button -->
        <button
            id="closeModalButton"
            class="absolute top-4 right-4 text-2xl font-bold text-gray-600 cursor-pointer hover:text-red-500
            transition-colors"
        >
            &times;
        </button>
        <h2 class="text-xl font-semibold mb-4">Edit Product</h2>

        <!-- Render the Symfony Form -->
        {{ form_start(edit_form, { 'attr': { 'id': 'editProductForm', 'class': 'space-y-4' } }) }}
        {{ form_row(edit_form.title, { 'attr': { 'class': 'w-full px-4 py-2 border rounded-lg' } }) }}
        {{ form_row(edit_form.price, { 'attr': { 'class': 'w-full px-4 py-2 border rounded-lg', 'step': '0.01' } }) }}
        {{ form_row(edit_form.content, { 'attr': { 'class': 'w-full px-4 py-2 border rounded-lg' } }) }}
        {{ form_row(edit_form.stock, { 'attr': { 'class': 'w-full px-4 py-2 border rounded-lg' } }) }}
        {{ form_row(edit_form.image) }}
        {{ form_row(edit_form.save, {
            'attr': {
                'class': 'w-full bg-slate-950 text-white py-2 rounded-lg hover:bg-slate-800'
            }
        }) }}
        {{ form_end(edit_form) }}
    </div>
</div>