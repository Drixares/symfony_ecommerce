{% extends 'base.html.twig' %}

{% block title %}
	Liste des catégories
{% endblock %}

{% block body %}
	<h1>Liste des catégories</h1>

	{{ dump(categories) }}

	{% for c in categories %}
		<p>
			<a href="{{ path('app_category_show', {id: c.id}) }}">
				{{ c.title }}
			</a>
		</p>
	{% else %}
		<p>Aucune catégorie</p>
	{% endfor %}

	<h2>Ajouter une catégorie</h2>
	{{ form(ajout_category) }}{% endblock %}
