<header class="bg-white w-full h-20 flex justify-between items-center px-5 border-b border-slate-300">
    <p class="text-xl text-slate-700 font-semibold">
        {{ app.user ? "Welcome " ~ app.user.getFirstName() ~ " !" : "Welcome to Ecommerce !" }}
    </p>
    <nav class="ml-auto">
        <ul class="inline-flex items-center gap-10">
            <li>
                <a href="{{ path('app_product') }}" class="text-slate-600 hover:text-slate-900 transition-colors">
                    Our products
                </a>
            </li>
            {% if app.user is not null %}
                <li class="relative text-slate-700 hover:text-slate-900 transition-colors">
                    <a href="{{ path('app_cart') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round" class="lucide lucide-shopping-cart"
                        >
                            <circle cx="8" cy="21" r="1"/>
                            <circle cx="19" cy="21" r="1"/>
                            <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/>
                        </svg>
                    </a>
                </li>
                <li class="flex items-center gap-3">
                    <a
                        href="{{path('app_account')}}"
                        class="inline-flex items-center gap-2 text-slate-600 border border-slate-200 px-4 py-2
                            rounded-lg bg-slate-100 hover:bg-slate-200 hover:text-slate-700 transition-colors"
                    >
                        My account
                    </a>
                    <a
                        href="{{path('app_logout')}}"
                        class="inline-flex items-center gap-2 text-slate-600 border border-slate-200 px-4 py-2
                            rounded-lg bg-slate-100 hover:bg-slate-200 hover:text-rose-500 transition-colors"
                    >
                        <span>
                            Logout
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round" class="lucide lucide-log-out"
                        >
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                            <polyline points="16 17 21 12 16 7"/>
                            <line x1="21" x2="9" y1="12" y2="12"/>
                        </svg>
                    </a>
                </li>
            {% else %}
                <li>
                    <a
                        href="{{path('app_login')}}"
                        class="text-slate-50 border border-slate-200 px-4 py-2
                            rounded-lg bg-slate-950 hover:bg-slate-800 transition-colors"
                    >
                        Login
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</header>